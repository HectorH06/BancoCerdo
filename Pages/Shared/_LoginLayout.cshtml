<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PiggyBank</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/siteLogin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PiggyBank.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <img src="~/Icons/Pig.png" alt="" height="70" width="70" border="0"><a href="/" class="logo"><h1>PiggyBank</h1></a>
        <nav>
            <ul class="nav__links">
                <li class="client"><a href="/Register">+ Conviertete en Cliente</a></li>
                <li><a href="/Login">Acceder</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>